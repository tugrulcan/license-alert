{
  "manifest_version":2,

  "name":"License Alert for GitHub",
  "description":"Adds license alert functionality",
  "version":"0.1",

  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },


  "page_action":{
    "default_icon":"icon.png",
    "default_title":"License Alert for GitHub"
  },
  "background":{
    "scripts":["src/eventPage.js"],
    "persistent":true
  },

  "content_scripts":[
    {
      "matches":["https://github.com/*"],
      "css":["src/license_alert.css"],
      "js":["src/jquery-3.2.0.min.js", "src/license_alert_contentscript.js"]
    }
  ],

  "permissions":[
    "tabs",
    "storage",
    "webNavigation",
    "https://github.com/*",
    "https://api.github.com/*"
  ]

}