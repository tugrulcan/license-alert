{
  "manifest_version": 2,
  "name": "License Alert for GitHub",
  "description": "Adds license alert functionality",
  "version": "0.3",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "page_action": {
    "default_icon": "icons/icon.png",
    "default_title": "License Alert for GitHub"
  },
  "background": {
    "matches": [
      "*://github.com/*/*",
      "*://*.github.com/*/*"
    ],
    "scripts": [
      "src/jquery-3.2.0.min.js",
      "src/eventPage.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*/*",
        "*://*.github.com/*/*"
      ],
      "css": [
        "src/license_alert.css"
      ],
      "js": [
        "src/jquery-3.2.0.min.js",
        "src/license_alert_contentscript.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "*://github.com/*/*",
    "*://*.github.com/*/*"
  ]
}